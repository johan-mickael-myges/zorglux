{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col h-screen">
        <header {{ stimulus_controller('menu_toggler') }}>
            {% include '@common/navbar.html.twig' %}
        </header>
        {% set wrapperClasses = [
            'flex',
            'flex-grow',
            'flex-col',
            'justify-center',
            'items-center',
            'px-5',
        ] %}
        <twig:Container :wrapperClasses="wrapperClasses" :useDefaultClasses="false">
            <h1 class="text-5xl md:text-7xl lg:text-8xl xl:text-9xl font-bold my-0">Histoires / Idées <br> Articles ...</h1>
            <p class="my-5 text-lg md:text-xl lg:text-2xl">Une place pour lire, écrire, et approfondir les connaissances</p>
            <button
                {{ stimulus_controller('clickable', { url: path('blog_index') }) }}
                {{ stimulus_target('clickable', 'element') }}
                class="md:w-1/3 lg:w-1/4 text-white bg-black rounded-xl md:rounded-full px-4 py-2 md:px-6 md:py-3">
                Découvrir
            </button>
        </twig:Container>
    </div>
{% endblock %}
