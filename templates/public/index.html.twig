{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col h-screen">
        <header {{ stimulus_controller('menu_toggler') }}>
            {% include '@common/navbar.html.twig' %}
        </header>
        <div class="flex flex-col justify-center flex-grow px-5 sm:px-20 md:px-40 lg:px-60 xl:px-80 2xl:px-96">
            <h1 class="text-5xl md:text-7xl lg:text-8xl xl:text-9xl font-bold">Human<br> stories and ideas</h1>
            <p class="my-5 text-lg md:text-xl lg:text-2xl">A place to read, write, and deepen your understanding</p>
            <button
                {{ stimulus_controller('clickable', { url: path('blog_write') }) }}
                {{ stimulus_target('clickable', 'element') }}
                class="md:w-1/3 lg:w-1/4 text-white bg-black rounded-xl md:rounded-full px-4 py-2 md:px-6 md:py-3">
                Get started
            </button>
        </div>
    </div>
{% endblock %}
