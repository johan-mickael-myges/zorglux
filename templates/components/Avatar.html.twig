<div {{ attributes }}>
    <div class="{{ this.classes }}">
        <img class="{{ this.getImageClasses|default('') }}" src="{{ this.getImg }}" alt="{{ this.name|default('Zorglux default avatar') }}" width="{{ this.size }}" height="{{ this.size }}" />
        <span class="{{ this.usernameClasses|default('') }}">{{ this.name }}</span>
    </div>
</div>
